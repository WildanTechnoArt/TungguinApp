<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.TestimoniActivity">

    <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/review_layout"
                android:gravity="center_horizontal"
                tools:layout_editor_absoluteY="57dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="@string/none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_designer_name"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="12dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/date_order"/>

                <TextView
                        android:text="@string/none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date_order"
                        tools:ignore="HardcodedText"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                        android:text="@string/none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_id"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/date_order"
                        tools:ignore="HardcodedText"/>
                <TextView
                        android:text=".........."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/kode_designer"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="12dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_designer_name"
                        android:textColor="@color/azure.primary_dark"
                        android:textStyle="bold" tools:ignore="HardcodedText"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFDADADA"
                    android:id="@+id/line_one"
                    android:layout_marginTop="12dp"/>

            <TextView
                    android:text="Seberapa puas Anda dengan pelayanan pada order ini?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_text_one"
                    android:layout_marginTop="24dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:gravity="center"/>

            <RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:theme="@style/RatingBar"
                    android:numStars="5" android:stepSize="1"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFDADADA"
                    android:id="@+id/line_two"
                    android:layout_marginTop="16dp"/>

            <TextView
                    android:text="Mau beri tip untuk designer?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_text_two"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    tools:ignore="HardcodedText"/>

            <TextView
                    android:text="Enter Amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_text_three"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textAllCaps="false"
                    tools:ignore="HardcodedText"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/input_amount"
                    android:textStyle="bold"
                    android:textColor="#FF818181"
                    android:gravity="center"
                    android:layout_marginEnd="62dp"
                    android:layout_marginStart="62dp"
                    tools:ignore="Autofill,LabelFor"
                    android:inputType="number"/>

            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

                <TableRow android:layout_width="match_parent"
                          android:layout_height="match_parent">

                    <Button
                            android:text="Rp1.000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_tipsatu"
                            android:textAllCaps="false"
                            android:layout_weight="1"
                            tools:ignore="HardcodedText"
                            style="@style/Widget.AppCompat.Button"/>

                    <Button
                            android:text="Rp2.500"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_tipdua"
                            android:textAllCaps="false"
                            android:layout_weight="1"
                            tools:ignore="HardcodedText"
                            style="@style/Widget.AppCompat.Button"/>

                    <Button
                            android:text="Rp4.000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_tiptiga"
                            android:textAllCaps="false"
                            android:layout_weight="1"
                            tools:ignore="HardcodedText"
                            style="@style/Widget.AppCompat.Button"/>

                </TableRow>

                <TableRow android:layout_width="match_parent"
                          android:layout_height="match_parent">

                    <Button
                            android:text="Rp6.000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_tipempat"
                            android:textAllCaps="false"
                            android:layout_weight="1"
                            tools:ignore="HardcodedText"
                            style="@style/Widget.AppCompat.Button"/>

                    <Button
                            android:text="Rp7.500"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_tiplima"
                            android:textAllCaps="false"
                            android:layout_weight="1"
                            tools:ignore="HardcodedText"
                            style="@style/Widget.AppCompat.Button"/>

                    <Button
                            android:text="Rp10.000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_tipenam"
                            android:textAllCaps="false"
                            android:layout_weight="1"
                            tools:ignore="HardcodedText"
                            style="@style/Widget.AppCompat.Button"/>

                </TableRow>

            </TableLayout>

            <TextView
                    android:text="Tip akan diambil dari wallet Anda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFDADADA"
                    android:id="@+id/line_three"
                    tools:layout_editor_absoluteY="211dp"
                    android:layout_marginTop="8dp"/>

            <TextView
                    android:text="Beri testimoni untuk designer:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText"
                    android:id="@+id/tv_text_four"
                    android:layout_marginStart="8dp"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:background="@drawable/input_layout"
                    android:ems="10"
                    android:id="@+id/input_testimoni_designer"
                    android:minHeight="100dp"
                    android:layout_marginTop="8dp"
                    android:hint="Misal: Designer baik dan fast response"
                    android:textSize="14sp"
                    android:gravity="fill_horizontal"
                    android:padding="10dp"
                    tools:ignore="Autofill,HardcodedText"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>

            <TextView
                    android:text="Beri testimoni untuk aplikasi tungguin:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText"
                    android:id="@+id/tv_text_five"
                    android:layout_marginStart="8dp"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:background="@drawable/input_layout"
                    android:ems="10"
                    android:id="@+id/input_testimoni_app"
                    android:minHeight="100dp"
                    android:layout_marginTop="8dp"
                    android:hint="Misal: Aplikasinya bagus, cepat dan mudah digunakan"
                    android:textSize="14sp"
                    android:gravity="fill_horizontal"
                    android:padding="10dp"
                    tools:ignore="Autofill,HardcodedText"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>

            <Button
                    android:text="Kirim"
                    android:layout_width="match_parent"
                    android:elevation="6dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_send"
                    android:background="@drawable/btn_green_round_hover"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    tools:targetApi="lollipop"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"/>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4B7B7B7B"
            android:id="@+id/shadow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone">

    </FrameLayout>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>