<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.CartActivity" android:id="@+id/keranjang_layout" android:background="#FFFFFF">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:elevation="6dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Keranjang"
                tools:targetApi="lollipop"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refreshLayput"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_margin="12dp"
            app:layout_constraintTop_toBottomOf="@+id/appbar">


        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/item_cart_layout" android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/orderItem_view"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                    app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/cardView"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="4dp" android:layout_marginEnd="4dp" android:id="@+id/linearLayout2">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:id="@+id/kode_voucer"
                        android:textSize="14sp"
                        android:background="@drawable/input_layout"
                        android:hint="Masukan Kode Voucher"
                        tools:ignore="Autofill,HardcodedText" android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:padding="12dp"
                        android:layout_marginRight="8dp"/>
                <Button
                        android:text="Cek"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" android:id="@+id/check" android:layout_weight="3"
                        android:background="@drawable/ref_round_button" android:textStyle="bold"
                        android:textColor="#FFFFFF" android:textAllCaps="false" tools:ignore="HardcodedText"
                />
            </LinearLayout>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="3dp"
                    android:id="@+id/cardView" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/btnPayment" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:background="@drawable/cart_round">

                    <TextView
                            android:text="Jumlah (0 produk)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_jumlah_produk"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="HardcodedText"/>

                    <TextView
                            android:text="Service free"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtService"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/text_jumlah_produk"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            tools:ignore="HardcodedText"/>

                    <TextView
                            android:text="Total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtTotal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/txtService"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            tools:ignore="HardcodedText"/>

                    <TextView
                            android:text="Rp 75.000,-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/jumlah_price"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            tools:ignore="HardcodedText"/>

                    <TextView
                            android:text="Rp 7.500,-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/service_price"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/jumlah_price"
                            android:layout_marginTop="8dp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText"/>

                    <TextView
                            android:text="Rp 82.500,-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/total_price"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/service_price"
                            android:layout_marginTop="8dp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText"/>

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>
            <Button
                    android:text="Bayar"
                    android:layout_width="match_parent"
                    android:elevation="6dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnPayment"
                    android:background="@drawable/login_round_button"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    tools:targetApi="lollipop"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="gone"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4B7B7B7B"
            android:id="@+id/shadow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>