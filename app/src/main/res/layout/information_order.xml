<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

        <TextView
                android:id="@+id/tv_design_order"
                android:text="@string/informasi_order"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <View
                android:id="@+id/top_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFDADADA"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_design_order"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <View
                android:id="@+id/first_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#FFDADADA"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_id"/>

        <View
                android:id="@+id/center_line"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:background="#FFDADADA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/top_line"
                app:layout_constraintStart_toEndOf="@+id/tv_date_time"
                app:layout_constraintHorizontal_bias="0.0"/>

        <View
                android:id="@+id/left_line"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#FFDADADA"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/top_line"
                app:layout_constraintHorizontal_bias="0.0"/>

        <View
                android:id="@+id/right_line"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#FFDADADA"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/top_line"
                app:layout_constraintHorizontal_bias="1.0"/>

        <View
                android:id="@+id/third_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFDADADA"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_expire_date"/>

        <View
                android:id="@+id/second_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#FFDADADA"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_date_time"/>

        <View
                android:id="@+id/bottom_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#FFDADADA"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_status"/>

        <TextView
                android:id="@+id/tv_order_id"
                android:text="@string/id_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/top_line"
                app:layout_constraintEnd_toStartOf="@+id/center_line"
                app:layout_constraintBottom_toTopOf="@+id/first_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.6"/>

        <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/waktu_pemesanan"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/first_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/second_line"/>

        <TextView
                android:id="@+id/tv_expire_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/expire_date"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/third_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/second_line"/>

        <TextView
                android:id="@+id/tv_status"
                android:text="@string/status"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/third_line"
                app:layout_constraintEnd_toStartOf="@+id/center_line"
                app:layout_constraintBottom_toTopOf="@+id/bottom_line"/>

        <TextView
                android:id="@+id/order_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                android:textColor="#000000"
                app:layout_constraintBottom_toTopOf="@+id/first_line"
                app:layout_constraintEnd_toStartOf="@+id/right_line"
                app:layout_constraintTop_toBottomOf="@+id/top_line"
                app:layout_constraintStart_toEndOf="@+id/center_line"/>

        <TextView
                android:id="@+id/date_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="marquee"
                android:focusable="auto"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                app:layout_constraintStart_toEndOf="@+id/center_line"
                app:layout_constraintTop_toBottomOf="@+id/first_line"
                app:layout_constraintEnd_toStartOf="@+id/right_line"/>

        <TextView
                android:id="@+id/date_expire"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="marquee"
                android:focusable="auto"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                app:layout_constraintStart_toEndOf="@+id/center_line"
                app:layout_constraintTop_toBottomOf="@+id/second_line"
                app:layout_constraintEnd_toStartOf="@+id/right_line"/>

        <TextView
                android:id="@+id/status_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/third_line"
                app:layout_constraintBottom_toTopOf="@+id/bottom_line"
                app:layout_constraintStart_toEndOf="@+id/center_line"
                app:layout_constraintEnd_toStartOf="@+id/right_line"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>