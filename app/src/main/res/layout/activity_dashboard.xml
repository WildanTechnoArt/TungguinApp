<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.Dashboard"
        android:id="@+id/dashboard_layout" android:background="@color/colorPrimary">

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/cardSearch"
            app:layout_constraintEnd_toStartOf="@+id/cart"
            android:layout_marginEnd="8dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_search_32dp"
                    android:id="@+id/search"
                    android:contentDescription="@string/gambar"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:textSize="16sp"
                    android:hint="@string/cari_desain"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/search_design"
                    android:importantForAutofill="no"
                    tools:targetApi="o"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_shopping_cart_32dp"
            android:id="@+id/cart"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/cardSearch"
            app:layout_constraintStart_toEndOf="@+id/cardSearch"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/gambar"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cartCount"
            android:background="@drawable/badge_item_count"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/cart"
            app:layout_constraintStart_toStartOf="@+id/cart"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.43"
            app:layout_constraintHorizontal_bias="0.31"
            android:textSize="10sp"
            tools:ignore="SmallSp"/>

    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardSearch"
    >

        <android.support.constraint.ConstraintLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    android:background="#00a0e8">

            </FrameLayout>

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"
                    android:id="@+id/scrollView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="18dp"
                        android:gravity="center">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/welcome_layout"
                            android:gravity="center">

                        <TextView
                                android:text="@string/welcome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/welcome"
                                android:textColor="#FFFFFF"
                                tools:layout_editor_absoluteY="64dp"
                                tools:layout_editor_absoluteX="360dp"/>

                        <TextView
                                android:text="@string/point"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/my_name"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <TextView
                            android:text="@string/intro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/intro"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            tools:layout_editor_absoluteY="64dp"
                            tools:layout_editor_absoluteX="360dp"/>

                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="6dp"
                            android:id="@+id/cardWallet"
                            tools:layout_editor_absoluteX="360dp"
                            android:layout_marginTop="36dp">

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="12dp"
                                android:gravity="center">

                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2.4">

                                <TextView
                                        android:text="@string/tungguin_pay"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:textSize="14sp"/>

                                <TextView
                                        android:text="@string/saldo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="left|center"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="#000000"
                                        android:id="@+id/userBalance"
                                        tools:ignore="RtlHardcoded" android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <Button
                                    android:text="@string/top_up"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_weight="3"
                                    android:textColor="#FFFFFF"
                                    android:textAllCaps="false"
                                    android:layout_marginEnd="4dp"
                                    android:textStyle="bold"
                                    android:id="@+id/topup"
                                    android:background="@drawable/topup_round_button"/>

                            <Button
                                    android:text="@string/history"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_weight="3"
                                    android:textColor="#FFFFFF"
                                    android:textAllCaps="false"
                                    android:layout_marginStart="4dp"
                                    android:textStyle="bold"
                                    android:id="@+id/topup_histori"
                                    android:background="@drawable/reward_round_button"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="32dp"
                            app:layout_constraintTop_toBottomOf="@+id/cardWallet"
                            android:id="@+id/main_menu">

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:baselineAligned="false">

                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginStart="3dp"
                                    tools:ignore="NestedWeights">

                                <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="8dp"
                                        app:cardElevation="6dp"
                                        android:layout_marginEnd="4dp"
                                        android:layout_marginStart="4dp"
                                        android:id="@+id/btn_profile">

                                    <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:padding="8dp"
                                            android:background="@drawable/menu_round_button"
                                            tools:ignore="TooDeepLayout">

                                        <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:srcCompat="@drawable/ic_person_black_26dp"
                                                android:contentDescription="@string/gambar"
                                                tools:ignore="TooDeepLayout"/>

                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>

                                <TextView
                                        android:text="@string/profil"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#FFFFFF"
                                        android:gravity="center"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginStart="3dp">

                                <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="8dp"
                                        app:cardElevation="6dp"
                                        android:layout_marginEnd="4dp"
                                        android:layout_marginStart="4dp">

                                    <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:padding="8dp"
                                            android:background="@drawable/menu_round_button">

                                        <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:srcCompat="@drawable/ic_mode_edit_black_26dp"
                                                android:contentDescription="@string/gambar"/>
                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>

                                <TextView
                                        android:text="@string/menu1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#FFFFFF"
                                        android:gravity="center"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginStart="3dp">

                                <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="8dp"
                                        app:cardElevation="6dp"
                                        android:layout_marginEnd="4dp"
                                        android:layout_marginStart="4dp">

                                    <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:padding="8dp">

                                        <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:srcCompat="@drawable/ic_monetization_on_black_26dp"
                                                android:contentDescription="@string/gambar"/>
                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>

                                <TextView
                                        android:text="@string/menu6"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#FFFFFF"
                                        android:gravity="center"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginStart="3dp">

                                <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="8dp"
                                        app:cardElevation="6dp"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginEnd="4dp">

                                    <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:padding="8dp" android:background="@drawable/menu_round_button">

                                        <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:srcCompat="@drawable/ic_grade_black_26dp"
                                                android:contentDescription="@string/gambar"/>
                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>

                                <TextView
                                        android:text="@string/menu3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#FFFFFF"
                                        android:gravity="center"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginTop="18dp"
                                android:baselineAligned="false">

                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginStart="3dp"
                                    tools:ignore="NestedWeights">

                                <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="8dp"
                                        app:cardElevation="6dp"
                                        android:layout_marginEnd="4dp"
                                        android:layout_marginStart="4dp">

                                    <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:padding="8dp" android:background="@drawable/menu_round_button">

                                        <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:srcCompat="@drawable/ic_local_offer_black_26dp"
                                                android:contentDescription="@string/gambar"/>
                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>

                                <TextView
                                        android:text="@string/menu4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#FFFFFF"
                                        android:gravity="center"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginStart="3dp">

                                <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="8dp"
                                        app:cardElevation="6dp"
                                        android:layout_marginEnd="4dp"
                                        android:layout_marginStart="4dp"
                                        android:background="@drawable/menu_round_button">

                                    <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:padding="8dp" android:background="@drawable/menu_round_button">

                                        <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:srcCompat="@drawable/ic_date_range_black_26dp"
                                                android:contentDescription="@string/gambar"/>
                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>

                                <TextView
                                        android:text="@string/menu5"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#FFFFFF"
                                        android:gravity="center"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginStart="3dp">

                                <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="8dp"
                                        app:cardElevation="6dp"
                                        android:layout_marginEnd="4dp"
                                        android:layout_marginStart="4dp">

                                    <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:padding="8dp" android:background="@drawable/menu_round_button">

                                        <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:srcCompat="@drawable/ic_help_black_26dp"
                                                android:contentDescription="@string/gambar"/>
                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>

                                <TextView
                                        android:text="@string/menu7"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#FFFFFF"
                                        android:gravity="center"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginStart="3dp">

                                <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="8dp"
                                        app:cardElevation="6dp"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginEnd="4dp" android:id="@+id/btnLogout">

                                    <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:padding="8dp" android:background="@drawable/menu_round_button">

                                        <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:srcCompat="@drawable/ic_exit_to_app_26dp"
                                                android:contentDescription="@string/gambar"/>
                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>

                                <TextView
                                        android:text="@string/logout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#FFFFFF"
                                        android:gravity="center"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <View android:id="@+id/line"
                  android:layout_width="match_parent"
                  android:layout_height="1dp" app:layout_constraintTop_toTopOf="@+id/scrollView"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginTop="135dp"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <include
            android:id="@+id/search_layout"
            layout="@layout/search_item_layout" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp" android:layout_width="0dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cardSearch"
            android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>