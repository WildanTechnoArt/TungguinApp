<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="4dp" android:layout_marginBottom="8dp">

    <TextView
            android:text="Desain Populer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label_desain"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000000"
            tools:ignore="HardcodedText" android:layout_marginTop="4dp" android:layout_marginStart="4dp"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/desain_item_view"
            android:layout_marginTop="8dp"/>

</LinearLayout>