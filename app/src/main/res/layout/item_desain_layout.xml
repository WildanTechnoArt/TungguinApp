<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_layout" android:layout_marginEnd="8dp">

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            android:id="@+id/itemClickDesain"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/menu_round_button">

            <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal" tools:ignore="ContentDescription"
                    android:scaleType="centerCrop"/>


            <TextView
                    android:id="@+id/nama_desain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spanduk Kuliner"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="6dp"
                    tools:ignore="HardcodedText"/>

            <TextView
                    android:text="Rp 20.000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/desain_price"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:textStyle="bold" tools:ignore="HardcodedText"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>