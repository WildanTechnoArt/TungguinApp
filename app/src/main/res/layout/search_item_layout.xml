<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_item_layout"
        android:background="#FFFFFF">

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/cardSearch"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_arrow_back_28dp"
                    android:id="@+id/closeSearch"
                    android:background="@drawable/item_selector_button"
                    android:layout_marginEnd="4dp"
                    tools:ignore="ContentDescription"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:hint="@string/srcDesain"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/search_design_by_name"
                    android:importantForAutofill="no"
                    tools:targetApi="o" android:inputType="text" android:imeOptions="actionSearch"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/search_layout_item"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/cardSearch"/>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_search"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_cross"
            android:id="@+id/imgCross"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/txt1"
            app:layout_constraintBottom_toBottomOf="@+id/contactUs"
            tools:ignore="ContentDescription" android:visibility="gone"/>

    <TextView
            android:text="@string/txtSrc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt1"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgCross"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cardSearch" android:visibility="gone"/>

    <TextView
            android:text="@string/txtSrc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imgCross"
            app:layout_constraintTop_toBottomOf="@+id/txt1"
            android:textColor="@color/colorAccent" android:visibility="gone"/>

    <TextView
            android:text="@string/tctSrc4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contactUs"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imgCross"
            app:layout_constraintTop_toBottomOf="@+id/txt2"
            android:textColor="@color/colorAccent" android:visibility="gone" android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>