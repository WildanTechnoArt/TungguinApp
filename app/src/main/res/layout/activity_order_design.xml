<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.activity.OrderDesignActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:elevation="6dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Order Desain"
                tools:targetApi="lollipop"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/layout_padding"
            android:layout_marginTop="@dimen/layout_padding"
            android:layout_marginEnd="@dimen/layout_padding"
            android:layout_marginBottom="@dimen/layout_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appbar">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:text="@string/design_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_price_list"/>

            <ToggleButton
                    android:id="@+id/toggle_detail_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_size_margin"
                    android:textOff="@string/send_detail_order"
                    android:textAllCaps="false"
                    android:textOn="@string/hide_detail_order"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_size_margin"
                    android:text="@string/design_concept"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15sp" android:id="@+id/tv_concept_design"/>

            <EditText
                    android:id="@+id/input_design_concept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_size_margin"
                    android:autofillHints="@string/concept_design_hint"
                    android:background="@drawable/input_layout"
                    android:inputType="textMultiLine"
                    android:minHeight="100dp"
                    android:hint="@string/concept_design_hint"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:gravity="start"
                    tools:targetApi="o"/>

            <LinearLayout
                    android:id="@+id/formatted_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_size_margin"
                    android:orientation="vertical"/>

            <TextView
                    android:text="@string/design_reference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_size_margin"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15sp" android:id="@+id/tv_ref_design"/>

            <Button
                    android:id="@+id/btn_add_reference"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/small_size_margin"
                    android:background="@drawable/btn_green_round_hover"
                    android:text="@string/add_reference_file"
                    android:textColor="#FFFFFF"
                    android:elevation="6dp"
                    android:paddingEnd="@dimen/layout_padding"
                    android:paddingStart="@dimen/layout_padding"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    tools:targetApi="lollipop"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_refrence_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_size_margin"
                    android:visibility="gone"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:background="@drawable/input_layout"
                    android:padding="@dimen/layout_padding">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                    <TextView
                            android:id="@+id/tv_design_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/none"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                    <TextView
                            android:id="@+id/tv_design_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_size_margin"
                            android:text="@string/none"
                            android:textStyle="bold" />

                </LinearLayout>

                <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/rp_0"
                        android:layout_weight="3"
                        android:gravity="center|end"
                        android:textStyle="bold"/>

            </LinearLayout>

            <Button
                    android:id="@+id/btn_design_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding"
                    android:layout_marginBottom="@dimen/normal_size_margin"
                    android:background="@drawable/btn_primary_round_hover"
                    android:elevation="6dp"
                    android:text="@string/design_order"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    tools:targetApi="lollipop"/>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_size_margin"
            android:layout_marginEnd="@dimen/normal_size_margin"
            android:layout_marginTop="@dimen/normal_size_margin"
            android:layout_marginStart="@dimen/normal_size_margin"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appbar"/>

    <FrameLayout
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4B7B7B7B"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>