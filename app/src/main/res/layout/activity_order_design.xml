<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.OrderDesignActivity"
        android:id="@+id/order_desain_layout"
        android:background="#FFFFFF">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:elevation="6dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Order Desain"
                tools:targetApi="lollipop"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appbar" android:id="@+id/scrollView"
            android:visibility="visible"
            android:layout_marginStart="12dp" android:layout_marginTop="12dp" android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >

            <TextView
                    android:text="Jumlah Desain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000" tools:ignore="HardcodedText"/>

            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceList_view"/>

            <TextView
                    android:text="Konsep Desain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:background="@drawable/input_layout"
                    android:ems="10"
                    android:id="@+id/konsep_dsn"
                    android:minHeight="100dp" android:layout_marginTop="8dp"
                    android:hint="Masukan konsep desain yang anda inginkan disini"
                    android:textSize="14sp"
                    android:gravity="fill_horizontal" android:padding="10dp" tools:ignore="Autofill,HardcodedText"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:ignore="UselessLeaf" android:id="@+id/formatted_layout"/>

            <TextView
                    android:text="Dokumen Desain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"/>

            <Button
                    android:text="Upload File"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/dokumen"
                    android:background="@drawable/ref_round_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:textColor="#FFFFFF"
                    android:elevation="6dp"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText"
                    tools:targetApi="lollipop"/>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" android:layout_marginTop="4dp" android:id="@+id/file_list_view"
                    android:visibility="gone">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_file"
                        android:id="@+id/img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:ignore="ContentDescription"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp" android:id="@+id/file_name"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/img" android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/file_close"
                        android:ellipsize="marquee"
                        android:focusable="auto"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:paddingTop="1dp"
                        tools:ignore="HardcodedText"/>

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:srcCompat="@drawable/ic_image_close"
                        android:id="@+id/file_close"
                        android:background="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:ignore="ContentDescription"/>

            </android.support.constraint.ConstraintLayout>

            <TextView
                    android:text="Referensi Desain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    android:layout_marginTop="12dp"/>
            <Button
                    android:text="(+) Tambah File"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/referensi"
                    android:background="@drawable/ref_round_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:textColor="#FFFFFF"
                    android:elevation="6dp"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText"
                    tools:targetApi="lollipop"/>

            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_ref_list"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:padding="10dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="2dp"
                    android:background="@drawable/input_layout">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                    <TextView
                            android:text="Spanduk Kuliner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/nama_desain"
                            android:textColor="#000000"
                            android:textStyle="bold" tools:ignore="HardcodedText"/>

                    <TextView
                            android:text="0 Desain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/jumlah_desain"
                            android:layout_marginTop="4dp"
                            android:textStyle="bold" tools:ignore="HardcodedText"/>

                </LinearLayout>

                <TextView
                        android:text="Rp 0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/total_harga"
                        android:layout_weight="3"
                        android:gravity="center|end"
                        android:textStyle="bold" tools:ignore="HardcodedText"/>

            </LinearLayout>

            <Button
                    android:text="Order Desain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_desain"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/primary_round_button"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="true"
                    android:elevation="6dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    tools:ignore="HardcodedText"
                    tools:targetApi="lollipop" android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:visibility="gone" app:layout_constraintTop_toBottomOf="@+id/appbar"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4B7B7B7B"
            android:id="@+id/shadow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>