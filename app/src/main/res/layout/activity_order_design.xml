<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.OrderDesignActivity"
        android:id="@+id/order_desain_layout"
        android:background="#FFFFFF">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:elevation="6dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Order Desain"
                tools:targetApi="lollipop"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appbar" android:id="@+id/scrollView"
            android:visibility="visible"
            android:layout_marginStart="12dp" android:layout_marginTop="12dp" android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >

            <TextView
                    android:text="Jumlah Desain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000" tools:ignore="HardcodedText"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceList_view">
            </androidx.recyclerview.widget.RecyclerView>

            <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/toggle_detail_order"
                    android:layout_marginTop="8dp"
                    android:textOff="Kirim Detail Order Sekarang" android:textAllCaps="false"
                    android:textOn="Sembunyikan Detail Order"/>
            <TextView
                    android:text="Konsep Desain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" android:id="@+id/tv_konsep_desain"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:background="@drawable/input_layout"
                    android:ems="10"
                    android:id="@+id/input_konsep_desain"
                    android:minHeight="100dp" android:layout_marginTop="8dp"
                    android:hint="Masukan konsep desain yang anda inginkan disini"
                    android:textSize="14sp"
                    android:gravity="fill_horizontal" android:padding="10dp" tools:ignore="Autofill,HardcodedText"
            />

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:ignore="UselessLeaf" android:id="@+id/formatted_layout"/>

            <TextView
                    android:text="Referensi Desain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    android:layout_marginTop="8dp" android:id="@+id/tv_ref_desain"/>
            <Button
                    android:text="(+) Tambah File"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/btn_referensi"
                    android:background="@drawable/ref_round_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:textColor="#FFFFFF"
                    android:elevation="6dp"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText"
                    tools:targetApi="lollipop"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_ref_list"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:padding="10dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="2dp"
                    android:background="@drawable/input_layout">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                    <TextView
                            android:text="-"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/nama_desain"
                            android:textColor="#000000"
                            android:textStyle="bold" tools:ignore="HardcodedText"/>

                    <TextView
                            android:text="0 Desain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/jumlah_desain"
                            android:layout_marginTop="4dp"
                            android:textStyle="bold" tools:ignore="HardcodedText"/>

                </LinearLayout>

                <TextView
                        android:text="Rp 0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/total_harga"
                        android:layout_weight="3"
                        android:gravity="center|end"
                        android:textStyle="bold" tools:ignore="HardcodedText"/>

            </LinearLayout>

            <Button
                    android:text="Order Desain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_desain"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/primary_round_button"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="true"
                    android:elevation="6dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    tools:ignore="HardcodedText"
                    tools:targetApi="lollipop" android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:visibility="gone" app:layout_constraintTop_toBottomOf="@+id/appbar"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4B7B7B7B"
            android:id="@+id/shadow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>