<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.github.library.bubbleview.BubbleTextView
            android:id="@+id/bubble_receive_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:padding="10dp"
            android:text="@string/message_example"
            android:textColor="#000000"
            android:textSize="15sp"
            android:maxWidth="250dp"
            android:visibility="visible"
            android:gravity="start"
            app:angle="8dp"
            app:arrowCenter="true"
            app:arrowHeight="8dp"
            app:arrowLocation="left"
            app:arrowPosition="14dp"
            app:arrowWidth="10dp"
            app:bubbleColor="@color/background_material_dark_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_receive_msg_date"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_receive_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:maxWidth="280dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_receive_msg_date"/>

    <TextView
            android:id="@+id/tv_receive_msg_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="4dp"
            android:text="@string/clock"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_receive_message"/>

</androidx.constraintlayout.widget.ConstraintLayout>