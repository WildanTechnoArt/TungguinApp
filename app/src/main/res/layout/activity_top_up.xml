<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.TopUpActivity"
        android:background="#FFFFFF"
        android:id="@+id/topupLayout">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:elevation="6dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Top Up"
                tools:targetApi="lollipop"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_attach_money_black_24dp"
            android:contentDescription="@string/gambar"
            tools:ignore="TooDeepLayout"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/user_balance"
            app:layout_constraintBottom_toBottomOf="@+id/user_balance"
            app:layout_constraintTop_toTopOf="@+id/user_balance"/>

    <TextView
            android:text="@string/saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/user_balance"
            tools:ignore="RtlHardcoded"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/appbar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/user_balance" android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btnTopUp">

        <ScrollView
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/scrollView"
                app:layout_constraintTop_toBottomOf="@+id/user_balance"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/menuLayout"
            >

                <TextView
                        android:text="@string/enter_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text1"
                        android:textStyle="bold"
                        android:gravity="center"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/inputAmount"
                        android:textStyle="bold"
                        android:textColor="#FF818181"
                        android:gravity="center"
                        android:layout_marginEnd="62dp"
                        android:layout_marginStart="62dp"
                        tools:ignore="Autofill,LabelFor" android:inputType="number"/>

                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tablayoutMenu"
                        android:layout_marginTop="12dp">

                    <TableRow android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:gravity="center">

                        <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="4dp"
                                android:layout_weight="1"
                                android:id="@+id/topup25k">

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="14dp"
                                    android:background="@drawable/menu_round_button2">

                                <TextView
                                        android:text="@string/_25_000"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/dualimaribu"
                                        android:textStyle="bold" android:textSize="16sp" android:gravity="center"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="4dp"
                                android:layout_weight="1"
                                android:id="@+id/topup50k">

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" android:padding="14dp"
                                    android:background="@drawable/menu_round_button2">

                                <TextView
                                        android:text="@string/_50_000"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/limapuluhribu"
                                        android:textStyle="bold"
                                        android:textSize="16sp"
                                        android:gravity="center"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="4dp"
                                android:layout_weight="1"
                                android:id="@+id/topup75k">

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="14dp"
                                    android:background="@drawable/menu_round_button2">

                                <TextView
                                        android:text="@string/_75_000"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tujuhlimaribu"
                                        android:textStyle="bold"
                                        android:textSize="16sp"
                                        android:gravity="center"/>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </TableRow>
                    <TableRow android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:gravity="center">

                        <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="4dp"
                                android:layout_weight="1"
                                android:id="@+id/topup100k">

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="14dp"
                                    android:background="@drawable/menu_round_button2">

                                <TextView
                                        android:text="@string/_100_000"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/seratusribu"
                                        android:textStyle="bold"
                                        android:textSize="16sp"
                                        android:gravity="center"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="4dp"
                                android:layout_weight="1"
                                android:id="@+id/topup200k">

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="14dp"
                                    android:background="@drawable/menu_round_button2">

                                <TextView
                                        android:text="@string/_200_000"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/duaratusribu"
                                        android:textStyle="bold"
                                        android:textSize="16sp"
                                        android:gravity="center"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="4dp"
                                android:layout_weight="1"
                                android:id="@+id/topup300k">

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="14dp"
                                    android:background="@drawable/menu_round_button2">

                                <TextView
                                        android:text="@string/_300_000"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tigaratusribu"
                                        android:textStyle="bold"
                                        android:textSize="16sp"
                                        android:gravity="center"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </TableRow>
                    <TableRow android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:gravity="center">

                        <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="4dp"
                                android:layout_weight="1"
                                android:id="@+id/topup500k">

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="14dp"
                                    android:background="@drawable/menu_round_button2">

                                <TextView
                                        android:text="@string/_500_000"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/limaratusribu"
                                        android:textStyle="bold"
                                        android:textSize="16sp"
                                        android:gravity="center"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="4dp"
                                android:layout_weight="1"
                                android:id="@+id/topup750k">

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="14dp"
                                    android:background="@drawable/menu_round_button2">

                                <TextView
                                        android:text="@string/_750_000"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tujuhratusribu"
                                        android:textStyle="bold"
                                        android:textSize="16sp"
                                        android:gravity="center"/>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="4dp"
                                android:layout_weight="1"
                                android:id="@+id/topup1000k">

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="14dp"
                                    android:background="@drawable/menu_round_button2">

                                <TextView
                                        android:text="@string/_1_000_000"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/satujuta"
                                        android:textStyle="bold"
                                        android:textSize="16sp"
                                        android:gravity="center"/>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </TableRow>
                </TableLayout>
                <TextView
                        android:text="@string/jumlah_top_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text2"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                <TextView
                        android:text="@string/rp_0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/totalTopUp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <Button
            android:text="@string/top_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnTopUp"
            android:elevation="6dp"
            android:background="@drawable/primary_round_button"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            tools:targetApi="lollipop" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>