<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.MainPage" android:background="#FFFFFF">

    <TextView
            android:text="@string/tungguin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/app_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"/>

    <TextView
            android:text="@string/txt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/privacy_policy"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:textColor="#000000"
            android:textAlignment="viewStart"/>

    <Button
            android:text="@string/masuk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            android:background="@drawable/login_round_button"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/privacy_policy"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnRegister"
            android:elevation="6dp"
            tools:targetApi="lollipop"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <Button
            android:text="@string/daftar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegister"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/privacy_policy"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:background="@drawable/register_round_button"
            app:layout_constraintStart_toEndOf="@+id/btnLogin"
            android:layout_marginStart="8dp"
            android:elevation="6dp"
            tools:targetApi="lollipop"/>

    <TextView
            android:text="@string/txt2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btnLogin"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:text="@string/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/intro"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/text1"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"/>

    <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            app:srcCompat="@drawable/undraw_login"
            android:id="@+id/loginImg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/intro"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/logo_full"
            app:layout_constraintTop_toBottomOf="@+id/app_name" app:layout_constraintVertical_bias="0.9"/>

</android.support.constraint.ConstraintLayout>