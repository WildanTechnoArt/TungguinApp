<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.SearchProductActivity">

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/card_search"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_arrow_back_28dp"
                    android:id="@+id/img_back"
                    android:background="@drawable/item_selector_button"
                    tools:ignore="ContentDescription"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:hint="@string/srcDesain"
                    android:background="@android:color/transparent"
                    android:id="@+id/tv_search_product"
                    android:importantForAutofill="no"
                    tools:targetApi="o"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    app:layout_constraintEnd_toStartOf="@+id/img_search"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@+id/img_back" android:layout_marginStart="8dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_search_28dp"
                    android:id="@+id/img_search"
                    android:background="@drawable/item_selector_button"
                    tools:ignore="ContentDescription"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/card_search" android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp" android:layout_marginEnd="12dp"
            app:layout_constraintVertical_bias="0.39999998">

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/rv_product_list"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/card_search"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_cross"
                android:id="@+id/img_cross"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/tv_message1"
                app:layout_constraintBottom_toBottomOf="@+id/tv_contact_us"
                tools:ignore="ContentDescription" android:visibility="gone"/>

        <TextView
                android:text="@string/txtSrc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_message1"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/img_cross"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/card_search" android:visibility="gone"/>

        <TextView
                android:text="@string/txtSrc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_message2" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/img_cross"
                app:layout_constraintTop_toBottomOf="@+id/tv_message1"
                android:textColor="@color/colorAccent" android:visibility="gone"/>

        <TextView
                android:text="@string/tctSrc4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_contact_us"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/img_cross"
                app:layout_constraintTop_toBottomOf="@+id/tv_message2"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:visibility="gone"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>