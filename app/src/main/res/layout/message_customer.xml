<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.github.library.bubbleview.BubbleTextView
            android:id="@+id/bubble_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:padding="10dp"
            android:text="@string/message_example"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:maxWidth="250dp"
            android:visibility="visible"
            app:angle="8dp"
            app:arrowCenter="true"
            app:arrowHeight="8dp"
            app:arrowLocation="right"
            app:arrowPosition="14dp"
            app:arrowWidth="10dp"
            app:bubbleColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_send_msg_date"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:maxWidth="250dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_send_msg_date"
            app:layout_constraintEnd_toStartOf="@+id/bubble_send_message"/>

    <TextView
            android:id="@+id/tv_send_msg_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/clock"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>