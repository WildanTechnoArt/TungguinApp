<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_layout"
        android:background="@drawable/item_selector_button">

    <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#FFDADADA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/listFormattedAmount"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listFormattedID"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:text="@string/formatterdId"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@+id/listFormattedStatus"/>

    <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:id="@+id/listFormattedStatus"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:paddingEnd="9dp"
            android:paddingStart="9dp"
            android:textSize="13sp"
            android:background="@drawable/order_round_no_hover"
            tools:ignore="HardcodedText"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:paddingBottom="4dp" android:paddingLeft="8dp"
            android:paddingRight="8dp" android:paddingTop="4dp"/>

    <TextView
            android:text="@string/rp_0"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/listFormattedAmount"
            app:layout_constraintTop_toBottomOf="@+id/listFormattedID"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"/>

    <Button
            android:text="Detail"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/btn_detail"
            android:background="@drawable/primary_round_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:elevation="6dp"
            tools:targetApi="lollipop"
            android:visibility="gone"/>

    <Button
            android:text="Bayar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/btn_pay"
            android:background="@drawable/login_round_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:elevation="6dp"
            tools:targetApi="lollipop" android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>